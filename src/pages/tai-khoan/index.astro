---
import Layout from "../../layouts/Layout.astro";
import HeaderTopBar from "../../components/Header/HeaderTopBar";
import HeaderMain from "../../components/Header/Header";
import Navigation from "../../components/UserPage/Navigation";
import Profile from "../../components/UserPage/Profile.tsx";

const title = `MTSMART - Cửa hàng điện thoại, laptop giá rẻ, chính hãng`;
---

<Layout>
  <Fragment slot="head">
    <title>{title}</title>
  </Fragment>
  <HeaderTopBar client:load />
  <HeaderMain client:load />

  <main
    class="w-full py-4 max-w-screen-xl mx-auto lg:px-2 px-2 2xl:px-0 relative"
  >
    <div class="flex flex-row gap-6">
      <div class="flex w-full flex-col gap-4 lg:basis-[25%]">
        <Navigation client:load />
      </div>
      <div class="flex w-full flex-col gap-4 lg:basis-[75%]">
        <Profile client:load />
      </div>
    </div>
  </main>
</Layout>
